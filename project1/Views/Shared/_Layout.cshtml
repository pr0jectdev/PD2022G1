<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    
    <link rel="stylesheet" href="~/css/home.min.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)

</head>
<body>
    <!-- Header -->
    <awaken-header>
        <nav class="navbar navbar-expand-sm sticky-top navbar-light" id="color-bg">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PD2022</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end" id="nav-color">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">Projetos<i class='bx bx-chevron-down'></i></a>
                            <ul class="sub">
                                <li><a class="nav-link" asp-controller="Home" asp-action="Index">Calculadora</a></li>
                                <li><a class="nav-link" asp-controller="Home" asp-action="Index">Previsão do tempo</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </awaken-header>
    <!-- End of Header -->
    
    <!-- Left Sidebar -->
    <awaken-nav>
        @*@RenderPage("~/Views/Shared/_LeftMenu.cshtml")*@

        <ul class="list-group">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="NextController" asp-action="Index">another menu link</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Draft" asp-action="Index">Draft - Index</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Draft" asp-action="Auxiliar">Draft - Auxiliar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="NextController" asp-action="Index">another menu link</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="NextController" asp-action="Index">another menu link</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="NextController" asp-action="Index">another menu link</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="NextController" asp-action="Index">another menu link</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="NextController" asp-action="Index">another menu link</a>
            </li>
        </ul>
    </awaken-nav>
    <!-- End of Left Sidebar -->

    <!-- Content Body -->
    <div class="awaken-content">
        @RenderBody()
    </div>
    <!-- End of Content Body -->

    <!-- Footer -->
    <awaken-footer class="border-top text-muted container-fluid">
            &copy; 2022 - PD2022
    </awaken-footer>

    <script src="~/js/home.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
